<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <!-- titulo do aplicativo -->

    <TableRow
        android:id="@+id/tableRow_appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/TextView_appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Sentinela - Imbituba"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <!-- Program Logos -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </TableRow>

    <!-- bot達o iniciar sess達o e fotinho -->

    <TableRow
        android:id="@+id/linhastartsession"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_startsession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.85"
            android:onClick="btn_startsession"
            android:text="Iniciar sess達o" />

        <!-- mudar a figura para algo que seja coerente com inicio de sessao -->

        <ImageView
            android:id="@+id/foto_cadastroPerguntas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:src="@drawable/ic_action_database" />
    </TableRow>

    <!-- bot達o sincronizar banco e fotinho -->

    <TableRow
        android:id="@+id/linhasincbanco"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_sincbanco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.85"
            android:onClick="btn_sincbanco"
            android:text="Sincronizar banco" />

        <!-- mudar a figura para algo que seja coerente com a sincronia do banco de dados -->

        <ImageView
            android:id="@+id/foto_editarPerguntas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:src="@drawable/ic_action_edit" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <!-- info do autor -->

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="infoAutor"
            android:src="@drawable/ic_action_info" />
    </TableRow>

</TableLayout>